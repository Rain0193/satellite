<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kinstalk.satellite.dao.MenuTypeMapper">
	

	<resultMap id="menuTypeMap" type="com.kinstalk.satellite.domain.MenuType">
        <id column="id" property="id"/>
        
		<result column="name" property="name"/>
		<result column="order_id" property="orderId"/>
    </resultMap>


    <insert id="save" parameterType="com.kinstalk.satellite.domain.MenuType">
        <selectKey resultType="Long" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into <include refid="TABLE"/>
        (
        	`id`,`name`,`order_id`
        )
        values
        (
        	#{id},
        	#{name},
            ROUND(UNIX_TIMESTAMP(now(3))*1000)
        )
    </insert>

    <insert id="update" parameterType="com.kinstalk.satellite.domain.MenuType">
        UPDATE <include refid="TABLE"/>
        <include refid="UPDATE_COLUMN_SET"/>
        <![CDATA[WHERE id = #{id}]]>
    </insert>

    <update id="delete" parameterType="java.lang.Long" >
        DELETE FROM <include refid="TABLE"/> WHERE id = #{id}
    </update>

    <!-- 查询 -->
    <select id="selectList" parameterType="java.util.Map" resultMap="menuTypeMap">
        SELECT
            <include refid="QUERY_COLUMN_LIST"/>
        FROM
        <include refid="TABLE"/>
        <include refid="QUERY_WHERE_CLAUSE"/>
        <include refid="QUERY_ORDER_LIMIT_CONDITION"/>
    </select>

    <!-- 查询总数 -->
    <select id="selectListCount" parameterType="java.util.Map" resultType="int">
        SELECT COUNT(id) AS COUNT FROM
        <include refid="TABLE"/>
        <include refid="QUERY_WHERE_CLAUSE"/>
        <include refid="QUERY_ORDER_LIMIT_CONDITION"/>
    </select>

    <!-- 查询ById -->
    <select id="selectById" parameterType="java.lang.Long" resultMap="menuTypeMap">
        SELECT
        <include refid="QUERY_COLUMN_LIST"/>
        FROM
        <include refid="TABLE"/>
        WHERE id = #{id}
    </select>


	<!-- 所有查询列 -->
	<sql id="QUERY_COLUMN_LIST">
		<![CDATA[
		`id` AS 'id',`name` AS 'name',`order_id` AS 'orderId'
		]]>
	</sql>

	<!-- 表-->
	<sql id="TABLE"><![CDATA[ admin_menu_type ]]></sql>
	
	<!-- 全部条件(更多功能可以通过queryData扩展实现)  -->
	<sql id="QUERY_WHERE_CLAUSE">
		<where>
			
			<if test="id != null and id != ''"><![CDATA[AND `id` = #{id}]]></if>
			<if test="name != null and name != ''"><![CDATA[AND `name` = #{name}]]></if>
			<if test="orderId != null and orderId != ''"><![CDATA[AND `order_id` = #{orderId}]]></if>
		</where>
	</sql>
	
	<!-- 智能排序与分页 -->
	<sql id="QUERY_ORDER_LIMIT_CONDITION">
		<if test="orderField != null and orderField != '' and orderFieldType != null and orderFieldType != ''"><![CDATA[ORDER BY ${orderField} ${orderFieldType}]]></if>
		<if test="startIndex != null and startIndex &gt;= 0 and pageSize != null and pageSize &gt; 0"><![CDATA[LIMIT #{startIndex},#{pageSize}]]></if>
	</sql>

	<!-- 更新列字段,只要不为NULL则更新,除开主键列 -->
	<sql id="UPDATE_COLUMN_SET">
		<set>
			
			<if test="name != null"><![CDATA[ `name` = #{name},]]></if>
			<if test="orderId != null"><![CDATA[ `order_id` = #{orderId},]]></if>
		</set>
	</sql>
	
	
</mapper>